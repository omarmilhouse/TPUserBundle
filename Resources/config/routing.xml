<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="tp_user" pattern="/user">
        <default key="_controller">TPUserBundle:User:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="tp_user_create" pattern="/user">
        <default key="_controller">TPUserBundle:User:create</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="tp_user_new" pattern="/user/new">
        <default key="_controller">TPUserBundle:User:new</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="tp_user_new_confirm" pattern="/user/new_confirm">
        <default key="_controller">TPUserBundle:User:newConfirm</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="tp_user_show" pattern="/user/{id}">
        <default key="_controller">TPUserBundle:User:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="tp_user_edit" pattern="/user/{id}/edit">
        <default key="_controller">TPUserBundle:User:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="tp_user_update" pattern="/user/{id}/edit">
        <default key="_controller">TPUserBundle:User:update</default>
        <requirement key="_method">PUT</requirement>
    </route>
    
    <route id="tp_user_delete" pattern="/user/{id}">
        <default key="_controller">TPUserBundle:User:delete</default>
        <requirement key="_method">DELETE</requirement>
    </route>
    
    <route id="tp_user_batch_delete" pattern="/user/batch/delete">
        <default key="_controller">TPUserBundle:User:delete</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
